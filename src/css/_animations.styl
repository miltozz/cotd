/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/
.order-enter
  transition 0.4s
  transform: translateX(-120%) rotate(-10deg)
  font-size: 0.2em
  padding: 0 !important
  max-height: 0
  &.order-enter-active
    transform: translateX(0) rotate(0)
    font-size: 0.8em
    padding: 2rem 0 !important
    max-height: 60px

.order-exit
  transition 0.3s
  transform: translateX(0)

  &.order-exit-active
    transform: translateX(120%)
    padding: 0

.count-enter
  background: #eee 
  transition: 0.3s
  transform: translateY(100%)
  &.count-enter-active
    transform: translateY(0)

.count-exit
  background: gray 
  position: absolute
  left 0
  bottom: 0
  transition 0.3s
  transform: translateY(0)
  &.count-exit-active
    transform: translateY(100%)